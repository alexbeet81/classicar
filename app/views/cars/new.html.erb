<div class="container">
  <div class="form_container shadow">
    <%= simple_form_for(@car) do |f| %>
      <%= f.input :model %>
      <%= f.input :year %>
      <%= f.input :seats %>
      <%= f.input :colour %>
      <%= f.input :address %>
      <%= f.input :price %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Create Car!", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
