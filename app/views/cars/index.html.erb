<h1>Cars</h1>


<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>User</th>  
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <%= @cars.each do |car| %>
            <tr>
                <td><%= car.model %></td>
                <td><%= car.user_id %></td>
                <%= link_to 'Show', car %>
                <% if policy(car).edit? %>
                    <td><%= link_to 'Edit', edit_car_path(car) %></td>
                <% end %>
                <% if policy(car).destroy? %>
                    <td><%= link_to 'Delete', car, method: :delete, data: { confirm: "Are you sure?"} %></td>
                <% end %>
            </tr>
        <% end %>
    </tbody>
</table>

<br>


<% if policy(Restaurant).new?  %>
    <%= link_to 'New Car', new_car_path %>
<% end %>
