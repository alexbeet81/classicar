<h1>Cars</h1>
<div class="container">
  <%= link_to "Add car", new_car_path %>

  <%= form_tag cars_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a car"
    %>
    <br>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>

  <div class="row row-cols-3 d-flex justify-content-between">
    <% @cars.each do |car| %>
      <% user = car.user %>
      <div class="col mb-4">
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag car.photo.key %>
          <div class="card-body">
            <h5 class="card-title"><%= car.model %></h5>
            <p class="card-text"><%= car.address %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Year: <%= car.year %></li>
            <li class="list-group-item">Colour: <%= car.colour %></li>
            <li class="list-group-item">Owner: <%= user.username %></li>
            <li class="list-group-item">Â£<%= car.price %> / hour</li>
          </ul>
          <div class="card-body">
            <a href="#" class="card-link"><%= link_to 'More info', car %></a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




