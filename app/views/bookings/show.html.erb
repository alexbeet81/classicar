<div class="container">
  <div class="row align-self-center justify-content-center">
    <div class="col-4 mb-4">
      <div style="background-color: white; padding: 12px; border-top-left-radius: 8px; border-top-right-radius: 8px;">
        <h2>Booking Success</h2>
        <h5>You have just booked <%= @car.model %></h5>
      </div>
      <div class="card shadow"  style="border: none">
        <img src="<%= @car.image_one %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= @car.model %></h5>
          <p class="card-text"><%= @car.address %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item" style="border: none"><%= @car.year %></li>
          <li class="list-group-item" style="border: none"><%= @car.colour %></li>
        </ul>
        <div class="card-body" style="border: none">
          <a href="#" class="card-link"><%= link_to 'edit booking', edit_booking_path(@booking), class: "btn btn-outline-secondary" %></a>
          <a href="#" class="card-ling"><%= link_to 'delete booking',
                                      booking_path(@booking),
                                      class: "btn btn-outline-secondary",
                                      method: :delete,
                                      data: {confirm: 'Are you sure you want to cancel this booking?'} %></a>
        </div>
      </div>
      <!-- <div style="padding-left: 20px; font-size: 10px;">
        <h5>Owner: <%= @car_owner.username %></h5>
        <h5>Your booking time is from <%= @booking.start_time %></h5>
        <h5>To <%= @booking.end_time %></h5>
      </div> -->
    </div>
  </div>
</div>