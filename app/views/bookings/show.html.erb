<div class="container">
  <div class="row align-self-center justify-content-center">
    <div class="col-4 mb-4">
      <div style="background-color: white; padding: 12px; border-top-left-radius: 8px; border-top-right-radius: 8px;">
        <h2 class="fugaz-font" style="font-size: 36px;">Booking Success!</h2>
        <h5>You have just booked <%= @car.model %></h5>
      </div>
      <div class="card shadow"  style="border: none">
        <%= cl_image_tag @car.photo.key, :class => "card-img-top mark-card-image" %>
        <div class="card-body">
          <h5 class="card-title fugaz-font"><%= @car.model %></h5>
          <p class="card-text"><%= @car.address %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item" style="border: none">Year: <%= @car.year %></li>
          <li class="list-group-item" style="border: none">Colour: <%= @car.colour %></li>
          <li class="list-group-item" style="border: none">Booking Period: <%= @booking.start_time.strftime("%-d/%-m/%Y") %> to <%= @booking.end_time.strftime("%-d/%-m/%Y") %></li>
        </ul>
        <div class="card-body d-flex" style="border: none">
          <a href="#" class="card-link"><%= link_to 'Edit', edit_booking_path(@booking), class: "btn btn-outline-secondary mr-1" %></a>
          <a href="#" class="card-ling"><%= link_to 'Cancel',
                                              cancel_booking_path(@booking),
                                              class: "btn btn-outline-secondary mr-1",
                                              data: {confirm: 'Are you sure you want to cancel this booking?'} %></a>
          <a href="#" class="card-link"><%= link_to 'View', car_path(@car), class: "btn btn-outline-secondary" %></a>
        </div>
      </div>
    </div>
  </div>
</div>


