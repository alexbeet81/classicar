<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <div class="card shadow rounded p-4">
        <h1 class="ml-4 mt-3 fugaz-font">Update your booking</h1>
        <div class="form ml-4">
          <%= simple_form_for([@car, @booking] ) do |f| %>
          <div class="form-group">
            <%= f.input :start_time, as: :date, html5: true, label: "Start Date", required: false %>
            <%= f.input :end_time, as: :date, html5: true, label: "End Date", required: false %>
            <%= f.button :submit, "Update Booking", class: 'btn btn-outline-dark ml-1' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>  
</div>  